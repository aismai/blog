<div class="main-menu">
  <div class="ui left floated main menu">
    {{#link-to 'comments.new' class="bug popup icon item"}}
      <i class="plus icon"></i>
    {{/link-to}}
  </div>
</div>

<div class="ui comments">
  <h3 class="ui dividing header">Comments:</h3>
  {{#each model.comments as |comment|}}
    <div class="comment">
      <a class="avatar">
        <img src="/assets/images/sanctum_sanctorum.jpg">
      </a>
      <div class="content">
        <div class="comment-actions">
          {{#if comment.isAuthor}}
            {{#link-to 'comments.edit' comment}}
              <i class="edit icon"></i>
            {{/link-to}}
            <span {{action 'delete' comment.id}}>
              <i class="ban icon"></i>
            </span>
          {{/if}}
        </div>
        <a class="author">{{comment.user.email}}</a>
        <div class="metadata">
          <span class="date">{{comment.dateOfCreation}}</span>
        </div>
        <div class="text">
          {{comment.body}}
        </div>
      </div>
    </div>
  {{/each}}

  <!--todo: use comment-form component-->
</div>
{{!comment-form item=model.id buttonLabel='leave a comment' action='save'}}