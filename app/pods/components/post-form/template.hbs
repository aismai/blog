<div class="skinny-wrapper wrapper-padding">
  <label>
    Title
  </label>
  <br>
  {{input type="text" value=item.title class="form-control" placeholder="The title of the post"}}
  <br>
  <label>
    Body
  </label>
  <br>
  {{textarea value=item.body cols="80" rows="6" class="form-control" placeholder="Write post body here..."}}
  <br>
  <input type="submit" {{action 'buttonClicked' item}}  placeholder={{buttonLabel}}>
  {{link-to 'back' 'posts' class="button"}}
</div>



