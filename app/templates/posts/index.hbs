<div class="col-md-12">
    {{!-- TODO: reload model before showing all posts --}}
    <!--вытаскиваю посты из модели блога-->
    {{#each model.posts as |post|}}
        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{link-to post.title 'comments' post}} </h3>
                </div>
                <div class="panel-body">
                    {{post.body}}
                </div>
            </div>
        </div>

        <div class="col-md-2">
            {{!#if model.isAuthor}}
                {{#link-to 'posts.edit' post class='btn btn-default btn-xs text-right'}}
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                {{/link-to}}
                <button class="btn btn-default btn-xs text-right" {{action 'deletePost' post}}>
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            {{!/if}}
        </div>
        {{/each}}

</div>