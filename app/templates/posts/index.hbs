<div class="col-md-8 col-md-offset-2">
    {{#each model as |post|}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{post.title}}</h3>
                </div>
                <div class="panel-body">
                    {{post.body}}
                </div>
            </div>
        {{/each}}
</div>