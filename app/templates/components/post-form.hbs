<h3>{{title}}</h3>

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
            {{input type="text" value=item.title class="form-control" placeholder="The title of the post"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Body</label>
        <div class="col-sm-10">
            {{textarea value=item.body cols="80" rows="6" class="form-control" placeholder="Write post body here..."}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'buttonClicked' item}}>{{buttonLabel}}</button>
            {{link-to 'back' 'posts' class="btn btn-default"}}
        </div>
    </div>
</div>
