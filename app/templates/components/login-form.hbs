<h3>Login:</h3>
<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">email:</label>
        <div class="col-sm-10">
            {{input type="text" value=email class="form-control" placeholder="email:"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">password:</label>
        <div class="col-sm-10">
            {{input type="password" value=password class="form-control" placeholder="password:"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'buttonClicked'}}>{{buttonLabel}}</button>
            <span>or</span>
            {{link-to "register" "users.new" class="btn btn-primary"}}
        </div>
    </div>
</div>