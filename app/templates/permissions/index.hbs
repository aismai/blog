<table class="ui celled table">
    <thead>
    <tr>
        <th>name</th>
        <th>code</th>
        <th colspan="2">actions</th>
    </tr>
    </thead>
    <tbody>
    {{# each model.permissions as |permission| }}
        <tr>
            <td>{{permission.name}}</td>
            <td>{{permission.code}}</td>
            <td>
                {{link-to 'edit' 'permissions.edit' permission.id class='ui button'}}
                <button {{action 'deletePermission' permission}} class="ui disabled button">
                    delete
                </button>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>




