{{link-to 'leave comment:' 'comments.new' model.id class="btn btn-default btn-xs"}}
<hr>
{{#each model.comments as |comment|}}
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title">{{comment.user.email}}</h3>
        </div>
        <div class="panel-body">
            {{comment.body}}
            {{!#if comment.isAuthor}}
                {{#link-to 'comments.edit' comment.id class='btn btn-success btn-xs text-right'}}
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                {{/link-to}}
                <button class="btn btn-success btn-xs text-right" {{action 'delete' comment}}>
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            {{!/if}}
        </div>
    </div>
{{/each}}