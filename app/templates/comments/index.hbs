{{link-to 'leave comment:' 'comments.new' model.id class="btn btn-warning btn-xs"}}
<hr>
{{#each model.comments as |comment|}}
    <div class="panel panel-default">
        <div class="panel-body">
            {{comment.body}}
            {{#link-to 'comments.edit' comment class='btn btn-warning btn-xs text-right'}}
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            {{/link-to}}
            <button class="btn btn-warning btn-xs text-right" {{action 'delete' comment}}>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </button>
        </div>
        <div class="panel-footer">comment by: {{comment.user.email}}</div>
    </div>
{{/each}}