{{#each model as |blog|}}
    {{#blog-item item=blog}}
        {{#link-to 'blogs.edit' blog.id class='btn btn-warning btn-xs'}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        {{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deleteBlog' blog}}>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </button>
    {{/blog-item}}
{{/each}}

