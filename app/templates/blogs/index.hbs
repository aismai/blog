<h1>Blogs</h1>

<div class="well">
    <ul class="nav nav-pills">
        {{#link-to 'blogs.index' tagName="li"}}<a href="">List all</a>{{/link-to}}
        {{#link-to 'blogs.new' tagName="li"}}<a href="">Add new</a>{{/link-to}}
    </ul>
</div>

{{#each model as |blog|}}
    {{#blog-item item=blog}}
        {{#link-to 'blogs.edit' blog.id class='btn btn-warning btn-xs'}}
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        {{/link-to}}
        <button class="btn btn-danger btn-xs" {{action 'deleteBlog' blog}}>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
        </button>
    {{/blog-item}}
{{/each}}